{
	"git": {
		"commitMessage": "Release v${version}",
		"tagName": "v${version}",
		"requireCleanWorkingDir": true,
		"requireBranch": "main"
	},
	"github": {
		"release": false
	},
	"npm": {
		"publish": false
	},
	"hooks": {
		"before:init": "pnpm check"
	},
	"plugins": {
		"@release-it/bumper": {
			"out": ["packages/*/package.json"]
		},
		"@release-it/keep-a-changelog": {
			"filename": "CHANGELOG.md"
		}
	}
}
