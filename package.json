{
	"name": "muuvmuuv-workspace",
	"private": true,
	"type": "module",
	"scripts": {
		"update-readme": "node ./tools/update-readme.js",
		"check": "pnpm biome check .",
		"format": "pnpm biome check --write .",
		"publish:all": "npm-run-all --parallel publish:npm publish:github",
		"publish:npm": "pnpm -r --filter './packages/*' --filter '!serverless-visits' publish --provenance --access public --no-git-checks --registry https://registry.npmjs.org/",
		"publish:github": "pnpm -r --filter './packages/*' --filter '!serverless-visits' publish --no-git-checks --registry https://npm.pkg.github.com/"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.2",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.9.3"
	}
}
