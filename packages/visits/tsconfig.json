{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./tmp",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "jsxFactory": "h",
    "downlevelIteration": true,
    "resolveJsonModule": true
  },
  "include": [
    "./api/**/*.ts",
    "./components/**/*.ts",
    "./components/**/*.tsx"
  ]
}
